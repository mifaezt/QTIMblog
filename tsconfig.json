{
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"types": [
			"nuxt",
			"@nuxt/types",
			"@nuxtjs/composition-api",
			"@vue/composition-api",
			"vite/client"
		],
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"]
		},
		"moduleResolution": "node",
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"types": ["vite/client"]
	},
	"include": [
		"./.nuxt",
		"./nuxt.config.ts",
		"./components/**/*",
		"./composables/**/*",
		"./layouts/**/*",
		"./pages/**/*",
		"./plugins/**/*",
		"./app.vue",
		"./error.vue",
		"./types/**/*"
	],
	"exclude": ["node_modules"]
}
